<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd
         http://cxf.apache.org/jaxws
         http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <!-- Import statement optional but often required if you're declaring
         other CXF beans in this file such as CXF's JMX MBeans -->
    <import resource="classpath:META-INF/cxf/cxf.xml"/>

    <bean id="bean-service-endpoint"
          class="pack.service.MyServiceImpl">
    </bean>

    <jaxws:endpoint
            id="jax-service-endpoint"
            implementor="#bean-service-endpoint"
            address="/myServiceEndpoint">
    </jaxws:endpoint>
</beans>